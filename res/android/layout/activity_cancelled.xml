<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_gravity="center_vertical"
  tools:context="com.adobe.phonegap.push.canceled.CanceledActivity">

  <RelativeLayout
    android:id="@+id/fullscreen_content_controls"
    style="?metaButtonBarStyle"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@color/colorAccent"
    android:orientation="horizontal"
    tools:ignore="UselessParent">

    <LinearLayout
      android:id="@+id/header_bar"
      android:layout_width="match_parent"
      android:layout_height="5dp"
      android:orientation="horizontal"
      android:background="@color/colorPrimaryDark"></LinearLayout>

    <TextView
      android:id="@+id/text_header"
      android:layout_below="@+id/header_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:textSize="25sp"
      android:textAlignment="center"
      android:layout_marginBottom="25dp"
      android:layout_marginLeft="15dp"
      android:layout_marginTop="15dp"
      android:textStyle="bold"
      android:text="@string/canceled_title_activity_fullscreen"/>

      <TextView
        android:id="@+id/text_canceled"
        android:layout_below="@+id/text_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginHorizontal="20dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:text="@string/canceled_placeholder" />

      <TextView
        android:id="@+id/text_punctual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/text_canceled"
        android:text="@string/canceled_tip"/>


        <Button
          android:id="@+id/button_ok"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="20dp"
          android:layout_marginBottom="15dp"
          android:text="@string/canceled_button_ok"
          android:layout_alignParentBottom="true"
          android:layout_alignParentRight="true"
          android:textColor="#fff"
          android:background="@color/colorPrimaryDark"/>


  </RelativeLayout>

</RelativeLayout>
